<Window x:Class="PythonManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Python Command Center" Height="700" Width="1000"
        Background="#1E1E1E" WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- === UPDATED BUTTON STYLE === -->
        <Style x:Key="ModernBtn" TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="22"/> <!-- Large Font -->
            <Setter Property="FontWeight" Value="SemiBold"/>
            
            <!-- CHANGED: 30px width-wise, 20px height-wise -->
            <Setter Property="Padding" Value="30,20"/> 
            
            <!-- CHANGED: Force the button to be tall -->
            <Setter Property="MinHeight" Value="65"/> 
            <Setter Property="MinWidth" Value="140"/>
            
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- CHANGED: Rounder corners for taller buttons -->
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Project Dashboard" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,0,0,30"/>

        <!-- Project List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="ProjectList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Card Design -->
                        <Border Background="#252526" CornerRadius="15" Margin="0,0,0,25" Padding="25">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="4" Opacity="0.4"/>
                            </Border.Effect>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Info Area -->
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" Foreground="White" FontSize="24" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding FolderPath}" Foreground="#AAAAAA" FontSize="16" Margin="0,10,0,0" TextTrimming="CharacterEllipsis"/>
                                    
                                    <!-- Tags Area -->
                                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                        <Border Background="#333333" CornerRadius="6" Padding="10,4" Margin="0,0,10,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Port: " Foreground="#888888" FontSize="15"/>
                                                <TextBlock Text="{Binding Port}" Foreground="#CCCCCC" FontSize="15" FontWeight="Bold"/>
                                            </StackPanel>
                                        </Border>
                                        <Border Background="#333333" CornerRadius="6" Padding="10,4">
                                            <TextBlock Text="{Binding Command}" Foreground="#888888" FontSize="15" FontStyle="Italic"/>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Status Label -->
                                <Border Grid.Column="1" VerticalAlignment="Center" Margin="40,0">
                                    <TextBlock Text="{Binding Status}" Foreground="{Binding StatusColor}" 
                                               FontSize="20" FontWeight="Bold" Width="120" TextAlignment="Center"/>
                                </Border>

                                <!-- Buttons Area -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="Start" Click="BtnStart_Click" Style="{StaticResource ModernBtn}" IsEnabled="{Binding CanStart}"/>
                                    <Button Content="Stop" Click="BtnStop_Click" Style="{StaticResource ModernBtn}" IsEnabled="{Binding IsRunning}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>